{
  "name": "ets666",
  "version": "0.1.3",
  "author": "ETS666 <sunwinbus@ets666.com>",
  "description": "ETS666 Tool",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "electron": "electron ./app/",
    "dev": "cross-env NODE_ENV=development electron ./app/",
    "build": "cross-env NODE_ENV=production vue-cli-service build",
    "electron:copy": "cpx ./app/**/*.js ./build",
    "pack:mac": "npm run build && npm run electron:copy && electron-builder --mac",
    "pack:win": "npm run build && npm run electron:copy && electron-builder --win",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint"
  },
  "build": {
    "extraMetadata": {
      "main": "build/index.js"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "./"
      }
    ],
    "productName": "ETS666 Tool",
    "appId": "com.ets666.app",
    "copyright": "Copyright Â© ETS666",
    "files": [
      "build/**/*"
    ],
    "mac": {
      "icon": "./resources/icons/icon.icns",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "dmg": {
      "sign": false,
      "artifactName": "${productName}_${version}.${ext}"
    },
    "win": {
      "icon": "./resources/icons/icon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "artifactName": "${productName}_${version}.${ext}"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "dependencies": {
    "axios": "^0.25.0",
    "compare-versions": "^6.1.0",
    "core-js": "^3.6.5",
    "electron-store": "^8.0.1",
    "element-plus": "^2.3.9",
    "github-markdown-css": "^5.2.0",
    "moment": "^2.29.1",
    "showdown": "^2.1.0",
    "vue": "^3.2.26",
    "vue-i18n": "^9.2.0-beta.26",
    "vue-router": "^4.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^2.0.0-0",
    "babel-eslint": "^10.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "electron": "16.0.6",
    "electron-builder": "22.10.5",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.2",
    "typescript": "~3.9.3",
    "vue-jest": "^5.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "transform": {
      "^.+\\.vue$": "vue-jest"
    }
  }
}
